-- Create the Hub UI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Frame for the Hub
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.25, 0, 0.5, 0)
frame.Position = UDim2.new(0.375, 0, 0.25, 0)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 5
frame.BorderColor3 = Color3.fromRGB(255, 255, 255)
frame.Parent = screenGui

-- Title for the Hub
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.15, 0)
title.Text = "Hax Hub V2"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextSize = 22
title.BackgroundTransparency = 1
title.TextAlignment = Enum.TextAlignment.Center
title.Parent = frame

-- Close Button for the UI
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0.2, 0, 0.1, 0)
closeButton.Position = UDim2.new(0.8, 0, 0, 0)
closeButton.Text = "Close"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeButton.TextSize = 18
closeButton.Parent = frame
closeButton.MouseButton1Click:Connect(function()
    frame.Visible = false
end)

-- Function to highlight all players
local function highlightPlayers()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Character and player.Character:FindFirstChild("Head") then
            local head = player.Character.Head
            local highlight = Instance.new("SelectionBox")
            highlight.Adornee = head
            highlight.Parent = head
            highlight.LineThickness = 0.1
            highlight.Color3 = Color3.fromRGB(255, 0, 0)  -- Red color for highlight
            highlight.Enabled = true
        end
    end
end

-- Button to Highlight All Players
local highlightButton = Instance.new("TextButton")
highlightButton.Size = UDim2.new(1, 0, 0.15, 0)
highlightButton.Position = UDim2.new(0, 0, 0.15, 0)
highlightButton.Text = "Highlight All Players"
highlightButton.TextColor3 = Color3.fromRGB(255, 255, 255)
highlightButton.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
highlightButton.TextSize = 16
highlightButton.Parent = frame
highlightButton.MouseButton1Click:Connect(highlightPlayers)

-- Function to teleport to a random player
local function teleportToRandomPlayer()
    local players = game.Players:GetPlayers()
    if #players > 1 then
        local randomPlayer = players[math.random(1, #players)]
        if randomPlayer.Character and randomPlayer.Character:FindFirstChild("HumanoidRootPart") then
            local root = randomPlayer.Character.HumanoidRootPart
            game.Players.LocalPlayer.Character:SetPrimaryPartCFrame(root.CFrame)
        end
    end
end

-- Button to teleport to a random player
local teleportButton = Instance.new("TextButton")
teleportButton.Size = UDim2.new(1, 0, 0.15, 0)
teleportButton.Position = UDim2.new(0, 0, 0.3, 0)
teleportButton.Text = "Teleport to Random Player"
teleportButton.TextColor3 = Color3.fromRGB(255, 255, 255)
teleportButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
teleportButton.TextSize = 16
teleportButton.Parent = frame
teleportButton.MouseButton1Click:Connect(teleportToRandomPlayer)

-- Function to kill all NPCs (models without a humanoid)
local function killNPCs()
    for _, obj in pairs(workspace:GetChildren()) do
        if obj:IsA("Model") and not obj:FindFirstChildOfClass("Humanoid") then
            obj:Destroy()
        end
    end
end

-- Button to kill all NPCs
local killButton = Instance.new("TextButton")
killButton.Size = UDim2.new(1, 0, 0.15, 0)
killButton.Position = UDim2.new(0, 0, 0.45, 0)
killButton.Text = "Kill All NPCs"
killButton.TextColor3 = Color3.fromRGB(255, 255, 255)
killButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
killButton.TextSize = 16
killButton.Parent = frame
killButton.MouseButton1Click:Connect(killNPCs)

-- Function to give player a sword
local function giveSword()
    local sword = Instance.new("Tool")
    sword.Name = "Sword"
    sword.RequiresHandle = true
    local handle = Instance.new("Part")
    handle.Name = "Handle"
    handle.Size = Vector3.new(0.2, 5, 0.2)
    handle.Position = game.Players.LocalPlayer.Character.HumanoidRootPart.Position + Vector3.new(0, 3, 0)
    handle.Anchored = false
    handle.CanCollide = false
    handle.Parent = sword
    sword.Parent = game.Players.LocalPlayer.Backpack
end

-- Button to give the player a sword
local swordButton = Instance.new("TextButton")
swordButton.Size = UDim2.new(1, 0, 0.15, 0)
swordButton.Position = UDim2.new(0, 0, 0.6, 0)
swordButton.Text = "Give Sword"
swordButton.TextColor3 = Color3.fromRGB(255, 255, 255)
swordButton.BackgroundColor3 = Color3.fromRGB(128, 0, 255)
swordButton.TextSize = 16
swordButton.Parent = frame
swordButton.MouseButton1Click:Connect(giveSword)
